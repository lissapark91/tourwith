	<!-- 댓글 목록 -->
	<select id="crewReplyList" resultType="tk.tourwith.project.crew.mapper.CrewReplyMapper" >
		
		SELECT
		*
		FROM CR_RPLY
	
	</select>

	<!-- 댓글 작성 -->
	<insert id="insertCrewReply" parameterType="tk.tourwith.project.crew.mapper.CrewReplyMapper">
	
		INSERT INTO
		CR_RPLY (	CR_RPLY_NO,
					CR_NO,
					CON,
					REG_DE,
					DEL_YN,
					WRITNG_MB_NO,
					UPD_DE,
					PARNTS_RPLY_NO)
		WHERE(#{cr_rply_no},#{cr_no},now(),#{del_yn},#{writng_mb_no},now(),#{parnts_rply_no})
	

	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateCrewReply" parameterType="tk.tourwith.project.crew.mapper.CrewReplyMapper">
	
		UPDATE CR_RPLY
			SET
			WRITNG_MB_NO = #{writng_mb_no}
		WHERE CR_RPLY_NO = #{cr_rply_no}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="daleteCrewReply" parameterType="int">
	
		DELETE FROM CR_RPLY WHERE CR_RPLY_NO = #{cr_rply_no}
	
	</delete>

</mapper>
